services:
  db:
    build: ./database
    restart: always
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_DB=job_default
      - POSTGRES_PASSWORD=Constance97170
    ports:
      - "5432:5432"
    volumes:
      - ./postgres_database:/docker-entrypoint-initdb.d/
      - postgres_data:/var/lib/postgresql/data/

  enginx:
    - build: ./nginx

  app:
    - build: .

  failtoban:
    - build: ./failtoban

volumes:
  postgres_data: {}